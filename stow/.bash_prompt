#!/bin/bash

# https://tldp.org/HOWTO/Bash-Prompt-HOWTO/x329.html
# https://wiki.archlinux.org/title/Bash/Prompt_customization
# https://misc.flogisoft.com/bash/tip_colors_and_formatting

# Color codes

# Black       0;30     Dark Gray     1;30
# Blue        0;34     Light Blue    1;34
# Green       0;32     Light Green   1;32
# Cyan        0;36     Light Cyan    1;36
# Red         0;31     Light Red     1;31
# Purple      0;35     Light Purple  1;35
# Brown       0;33     Yellow        1;33
# Light Gray  0;37     White         1;37


# https://stackoverflow.com/questions/342093/ps1-line-wrapping-with-colours-problem
export BLACK=$(tput setaf 0)
export RED=$(tput setaf 1)
export GREEN=$(tput setaf 2)
export LIME_YELLOW=$(tput setaf 190)
export YELLOW=$(tput setaf 3)
export POWDER_BLUE=$(tput setaf 153)
export BLUE=$(tput setaf 4)
export MAGENTA=$(tput setaf 5)
export CYAN=$(tput setaf 6)
export WHITE=$(tput setaf 7)
export BRIGHT=$(tput bold)
export NORMAL=$(tput sgr0)
export NC=$(tput sgr0)
export RESET=$(tput sgr0)
export BLINK=$(tput blink)
export REVERSE=$(tput smso)
export UNDERLINE=$(tput smul)

export PS1="\[${RED}\][\s] \[${LIME_YELLOW}\][\V] \[${CYAN}\][$SHLVL] \[${MAGENTA}\][\!] \[${RED}\]\u \[${GREEN}\]@ \[${BLUE}\]\h \[${NC}\]: \[${YELLOW}\]\W \[${NC}\]\n$ "
# export PS1="\u @ \h : \W\n $ "

unset -f red; red () { tput setaf 1; }
unset -f green; green () { tput setaf 2; }
unset -f yellow; yellow () { tput setaf 3; }
unset -f blue; blue () { tput setaf 4; }
unset -f nc; nc () { tput sgr0; }
unset -f reset; reset () { tput sgr0; }
unset -f blink; blink () { tput blink; }
unset -f bold; bold () { tput bold; }
unset -f reverse; reverse () { tput smso; }
unset -f underline; underline () { tput smul; }


# TODO: This command will read a line from std input and apply a random color to it.

random-color () {
    grep :
}
