#!/bin/bash

# https://tldp.org/HOWTO/Bash-Prompt-HOWTO/x329.html
# https://wiki.archlinux.org/title/Bash/Prompt_customization
# https://misc.flogisoft.com/bash/tip_colors_and_formatting

# Color codes

# Black       0;30     Dark Gray     1;30
# Blue        0;34     Light Blue    1;34
# Green       0;32     Light Green   1;32
# Cyan        0;36     Light Cyan    1;36
# Red         0;31     Light Red     1;31
# Purple      0;35     Light Purple  1;35
# Brown       0;33     Yellow        1;33
# Light Gray  0;37     White         1;37


# https://stackoverflow.com/questions/342093/ps1-line-wrapping-with-colours-problem
BLACK=$(tput setaf 0)
RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
LIME_YELLOW=$(tput setaf 190)
YELLOW=$(tput setaf 3)
POWDER_BLUE=$(tput setaf 153)
BLUE=$(tput setaf 4)
MAGENTA=$(tput setaf 5)
CYAN=$(tput setaf 6)
WHITE=$(tput setaf 7)
BRIGHT=$(tput bold)
NORMAL=$(tput sgr0)
NC=$(tput sgr0)
RESET=$(tput sgr0)
BLINK=$(tput blink)
REVERSE=$(tput smso)
UNDERLINE=$(tput smul)

export BLACK RED GREEN LIME_YELLOW YELLOW POWDER_BLUE BLUE MAGENTA CYAN WHITE BRIGHT NORMAL NC RESET BLINK REVERSE UNDERLINE



unset -f red; red () { tput setaf 1; }
unset -f green; green () { tput setaf 2; }
unset -f yellow; yellow () { tput setaf 3; }
unset -f blue; blue () { tput setaf 4; }
unset -f nc; nc () { tput sgr0; }
unset -f reset; reset () { tput sgr0; }
unset -f blink; blink () { tput blink; }
unset -f bold; bold () { tput bold; }
unset -f reverse; reverse () { tput smso; }
unset -f underline; underline () { tput smul; }

update_prompt_v1 () {
    PS1="\[${RED}\][\s] \[${LIME_YELLOW}\][\V] \[${CYAN}\][$SHLVL] \[${MAGENTA}\][\!] \[${RED}\]\u \[${GREEN}\]@ \[${BLUE}\]\h \[${NC}\]: \[${YELLOW}\]\w \[${NC}\]\n$ "
    export PS1
}

update_prompt_v2 () {
    PS1="\[$(tput setab 237)$BRIGHT${CYAN}\]$ "
    export PS1
    PS0="${NORMAL}${NC}"
    export PS0
}

update_prompt () {
    PS1="\W:\[$(tput setab 237)\]\[${CYAN}\]\[$(tput bold)\]$"
    export PS1
    PS0="\[$(tput sgr0)\]"
    export PS0
}

export PROMPT_COMMAND="update_prompt"
# export PS1="\u @ \h : \W\n $ "
echob () {
    blue
    echo "$1"
    nc
}

echog () {
    green
    echo "$1"
    nc
}

echor () {
    red
    echo "$1"
    nc
}

echoy () {
    yellow
    echo "$1"
    nc
}

