#!/usr/bin/env python3

import curses
import time

def main(stdscr):
    curses.curs_set(0)  # Hide the cursor
    stdscr.clear()

    text = "Hello, World!"
    y, x = stdscr.getmaxyx()
    x_position = x // 2 - len(text) // 2
    y_position = y // 2

    while True:
        stdscr.clear()
        stdscr.addstr(y_position, x_position, text)
        stdscr.refresh()
        
        # Move the text horizontally
        x_position = (x_position + 1) % (x - len(text) + 1)
        
        time.sleep(0.1)  # Adjust the delay for animation speed

if __name__ == "__main__":
    curses.wrapper(main)
