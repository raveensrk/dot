func! Fix() abort
	let status="â”†%n"
	if &winfixbuf
		let status.="â”†%#Directory#FIX%*"
	else
		let status.="â”†BUF"
	endif
	let status.="â”†%M"
	let status.="â”†%R"
	let status.="â”†%f"
	let status.="â”†%S"
	let status.="â”†%="
	let status.="â”†%H"
	let status.="â”†%W"
	let status.="â”†%Y"
	let status.="â”†%q"
	let status.="â”†%k"
	let status.="â”†%p%%"
	" let status.="%b"
	" let status.="â”†"
	let status.="â”†%l,%v"
	let status.="â”†"
	" let status.="%L"
	" let status.="â”†"
	return status
endfunc

set showcmd
set showcmdloc=statusline
set statusline=%{%Fix()%}
