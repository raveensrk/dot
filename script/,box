#!/usr/bin/env bash

set -euo pipefail
IFS=$'\n\t'
# set -x

if [ "$#" -eq 0 ]; then
	read -re line
	text="$line"
else
	text="$*"
fi

len="${#text}"
len=$((len + 4))

# printf "\t\t"
# {
# 	printjot -b - "$len" | rs -w200 -g 0
# 	printf "%s\n" "$text"
# 	jot -b - "$len" | rs -w200 -g 0
# } | lolcat

{
	,print_centered - -
	,print_centered "$text"
	,print_centered - -
} | lolcat

exit 0
