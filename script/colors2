#!/usr/bin/env bash

cat <<HERE
------------------------------------------------------------------------------   
ANSI COLOR CODES
------------------------------------------------------------------------------   
16-bit colors
------------------------------------------------------------------------------   
\e[i]m
HERE

{
for ((i=30;i<=47;i++)); do
    echo -e "$i = \e[${i}mColor\e[0m"
done
} | column -x

cat <<HERE
------------------------------------------------------------------------------   
256 bit colors
------------------------------------------------------------------------------   
\e[38;5;im is foreground
\e[48;5;im is background

White on color
====================
HERE

{
for ((i=0;i<256;i++)); do
    echo -e "$i = \e[38;5;${i}mColor\e[0m \e[48;5;${i}mColor\e[0m"
done
} | column -x

cat <<HERE
------------------------------------------------------------------------------   
256 bit colors
------------------------------------------------------------------------------   
\e[38;5;im is foreground
\e[48;5;im is background

Black on color
====================
HERE

{
for ((i=0;i<256;i++)); do
    echo -e "$i = \e[48;5;${i}m\e[38;5;0mColor\e[0m"
done
} | column -x

exit 0

